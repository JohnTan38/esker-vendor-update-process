# Esker Vendor Update Process - Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# Esker API Configuration
ESKER_API_URL=https://your-esker-instance.com/api
ESKER_API_KEY=your_api_key_here

# Email Configuration (Optional)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@example.com
EMAIL_RECIPIENTS=admin@example.com,vendor-team@example.com

# Application Settings
LOG_LEVEL=INFO
LOG_FILE=logs/vendor_update.log
OUTPUT_DIR=output

# Processing Options
BATCH_SIZE=100
VALIDATION_STRICT=true
AUTO_RETRY_FAILURES=true
